<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    tools:context=".ui.auth.LogInFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/switzer_bold"
            android:text="Login"
            android:textColor="#00072D"
            android:textSize="35sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to continue"
            android:fontFamily="@font/switzer_bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Don't have an account?"
                android:textColor="@color/primary_color" />

            <TextView
                android:id="@+id/btnSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:fontFamily="@font/switzer_bold"
                android:text="Sign up"
                android:textColor="#00072D"
                android:textSize="17sp" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            app:hintTextColor="#00072D"
            android:paddingEnd="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtLogInEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#00072D"
                android:background="@drawable/outline_tv_search_style"
                android:hint="Email" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:hint="Password"
            app:hintTextColor="#00072D"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/primary_color">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#00072D"
                android:background="@drawable/outline_tv_search_style"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:text="Log In"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:backgroundTint="#00072D"
            android:fontFamily="@font/switzer_bold"
            app:icon="@drawable/login" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="175dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/supreme_regular"
                android:text="Forget your password?"
                android:textColor="@color/primary_color"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/btnForgetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/switzer_bold"
                android:text="Forget"
                android:textAllCaps="false"
                android:textColor="#00072D"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>

