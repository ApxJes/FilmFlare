<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="165dp"
    android:layout_height="240dp"
    android:layout_margin="5dp"
    android:elevation="10dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_color"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:elevation="4dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/imvSeasonPoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txvSeasonNumber"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/supreme_thin"
            android:text="Season 0"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txvSeasonFirstAirDate"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/supreme_thin"
            android:text="First Air Date: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txvSeasonEpisodeNumber"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/supreme_thin"
            android:text="Number of season"
            android:textColor="@color/white" />


    </LinearLayout>


</androidx.cardview.widget.CardView>