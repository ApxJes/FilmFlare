<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="170dp"
    android:layout_marginEnd="8dp"
    android:background="#242A32">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#242A32"
        android:gravity="center_horizontal">

        <!-- Circular Crew Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imvCrewProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pf2"
            app:shapeAppearanceOverlay="@style/CircleImageView" />

        <!-- Crew Name -->
        <TextView
            android:id="@+id/txvCrewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Dwayne Johnson"
            android:textColor="@color/white"
            android:fontFamily="@font/supreme_regular"
            android:gravity="center" />

        <!-- Crew Job -->
        <TextView
            android:id="@+id/txvCrewJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Black Adam"
            android:textColor="@color/white"
            android:fontFamily="@font/supreme_regular"
            android:gravity="center" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
